<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_horizontal_margin">
    <ImageView
        android:id="@+id/ivMessageRecipientUserProfileImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4a94d0"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/tvMessageRecipientUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivMessageRecipientUserProfileImage"
        android:layout_toEndOf="@+id/ivMessageRecipientUserProfileImage"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        tools:text="Billy"/>

    <TextView
        android:id="@+id/tvMessageRecipientMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessageRecipientUserName"
        android:layout_toRightOf="@+id/ivMessageRecipientUserProfileImage"
        android:layout_toEndOf="@+id/ivMessageRecipientUserProfileImage"
        tools:text="How are you"/>

    <TextView
        android:id="@+id/tvMessageRecipientCreatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textAppearance="@style/smallerText"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        tools:text="Created At"
        />
</RelativeLayout>